{
  "name": "wpeka/wpadcenter",
  "description": "Simple WordPress Ad Management Plugin",
  "homepage": "https://club.wpeka.com/",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.0",
    "automattic/jetpack-autoloader": "2.9.1",
    "automattic/jetpack-constants": "1.5.1",
    "composer/installers": "~1.7",
    "maxmind-db/reader": "1.6.0",
    "pelago/emogrifier": "3.1.0",
    "psr/container": "1.0.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.4"
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    },
    "sort-packages": true
  },
  "autoload": {
    "exclude-from-classmap": [
      "includes/legacy",
      "includes/libraries"
    ]
  },
  "scripts": {
    "test": [
      "phpunit"
    ],
    "phpcs": [
      "phpcs -s -p"
    ],
    "phpcs-pre-commit": [
      "phpcs -s -p -n"
    ],
    "phpcbf": [
      "phpcbf -p"
    ],
    "makepot-audit": [
      "wp --allow-root i18n make-pot . --exclude=\".github,.wordpress-org,bin,sample-data,node_modules,tests\" --slug=woocommerce"
    ],
    "makepot": [
      "@makepot-audit --skip-audit"
    ],
    "bin": [
      "echo 'bin not installed'"
    ],
    "build-lib": [
      "sh ./bin/build-lib.sh"
    ]
  },
  "extra": {
    "scripts-description": {
      "test": "Run unit tests",
      "phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
      "phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier",
      "makepot-audit": "Generate i18n/languages/woocommerce.pot file and run audit",
      "makepot": "Generate i18n/languages/woocommerce.pot file"
    },
    "bamarni-bin": {
      "target-directory": "bin/composer"
    }
  }
}